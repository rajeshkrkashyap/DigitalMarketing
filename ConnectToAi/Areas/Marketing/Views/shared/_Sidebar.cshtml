                    </ul>
                </li>
          
                <li class="@isOpenSEOAutomation">
                    <a href="/marketing/SEOAutomation/Index">
                        <div class="item-content">
                            <div class="item-media">
                                <i class="ti-agenda"></i>
                            </div>
                            <div class="item-inner">
                                <span class="title">SEO Automation</span>
                            </div>
                        </div>
                    </a>
                </li>
                <li class="@isActiveSettings">
                    <a href="/marketing/Default/Index">
                        <div class="item-content">
                            <div class="item-media">
                                <i class="ti-settings"></i>
                            </div>
                            <div class="item-inner">
                                <span class="title">Settings</span>
                            </div>
                        </div>
                    </a>
